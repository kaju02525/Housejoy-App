<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_268sdp"
    android:layout_height="@dimen/_181sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:id="@+id/const_lay"
    android:transitionName="const_lay"
    android:background="@android:color/transparent"
    android:layout_marginEnd="@dimen/_5sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_id"
        android:layout_width="@dimen/_268sdp"
        android:layout_height="@dimen/_135sdp"
        android:elevation="@dimen/_2sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/_2sdp"
        android:transitionName="iv_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg"
            />

    </androidx.cardview.widget.CardView>


    <include
        layout="@layout/content_layout_"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/card_id"
        app:layout_constraintStart_toStartOf="@+id/card_id" />


</androidx.constraintlayout.widget.ConstraintLayout>

